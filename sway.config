# INPUT
# =====
input * {
  xkb_layout gb
}


# PROGRAMS
# ========
set $term foot
set $browser firefox


# BINDINGS
# ========
set $mod Mod4

bindsym $mod+Return exec $term
bindsym $mod+b exec $browser
bindsym $mod+q kill
bindsym $mod+Shift+r reload

bindsym $mod+f fullscreen

floating_modifier $mod normal


# APPEARANCE
# ==========
gaps inner 4

default_border pixel 2

client.focused          #{{PRIMARY_ACCENT}}   #{{PRIMARY_ACCENT}}   #{{WHITE_BRIGHT}}   #{{PRIMARY_ACCENT}}
client.unfocused        #00000000 #00000000 #00000000 #00000000 
client.focused_inactive #00000000 #00000000 #00000000 #00000000


# MONITORS
# ========
output HDMI-A-1 transform 180 pos 1080 0
output DP-1 transform 90 pos 3000 240
output DP-2 transform normal pos 1080 1080
output DP-3 transform 270 pos 0 240

# BAR
# ===
bar {
  swaybar_command waybar
}
